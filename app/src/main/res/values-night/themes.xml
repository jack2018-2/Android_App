<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hektar_accent</item>
        <item name="colorPrimaryVariant">@color/hektar_dark</item>
        <item name="colorOnPrimary">@color/hektar_text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hektar_accent</item>
        <item name="colorSecondaryVariant">@color/hektar_dark</item>
        <item name="colorOnSecondary">@color/hektar_dark</item>
        <item name="android:textColor">@color/hektar_text_light</item>
        <item name="android:navigationBarColor">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- This is the styling chips -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <!-- Customize your theme here. -->
    </style>

    <!--CARDS-->
    <style name="Widget.App.Card" parent="">
        <item name="cardBackgroundColor">@color/hektar_background</item>
        <item name="android:textColor">@color/hektar_text_light</item>
    </style>


    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorOnPrimary">@color/hektar_dark</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>


</resources>