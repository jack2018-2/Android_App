<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- This is the styling chips -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hektar_accentVariant</item>
        <item name="colorPrimaryVariant">@color/hektar_background</item>
        <item name="colorOnPrimary">@color/hektar_text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hektar_accentVariant</item>
        <item name="colorSecondaryVariant">@color/hektar_dark</item>
        <item name="colorOnSecondary">@color/hektar_text_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--CHIPS-->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIcon">@drawable/ic_baseline_done_24</item>
    </style>

    <!--CARDS-->
    <style name="Widget.App.Card" parent="">
        <item name="cardBackgroundColor">@color/hektar_light</item>
        <item name="android:textColor">@color/hektar_dark</item>
    </style>

    <!--ACTION BAR-->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">?attr/colorOnSecondary</item>
    </style>

    <!--BUTTONS ACTION BAR-->
    <style name="MyActionBarButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
    </style>

    <!--ALL BUTTONS-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!--OTHER-->
    <style name="Theme.TZ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TZ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TZ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>